<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/dialog_background">

        <!-- Dialog Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_mood"
            android:textSize="20sp"
            android:textColor="@color/accent_green"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- How are you feeling? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_feeling"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Mood Emoji Grid -->
        <GridLayout
            android:id="@+id/gridMoodEmojis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:layout_marginBottom="16dp"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false">

            <!-- Emojis will be added programmatically -->

        </GridLayout>

        <!-- Selected Mood Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/selected_mood_display_bg"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvSelectedMoodEmoji"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ðŸ˜Š"
                android:textSize="56sp"
                android:gravity="center"
                android:background="@drawable/selected_emoji_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvMoodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happy"
                    android:textSize="18sp"
                    android:textColor="@color/accent_green"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMoodDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_desc"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Note/Description Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_note_optional"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/whats_on_mind"
            app:boxBackgroundColor="@color/surface_dark"
            app:boxStrokeColor="@color/accent_green"
            app:hintTextColor="@color/accent_green"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMoodNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:maxLines="5"
                android:maxLength="200"
                android:gravity="top|start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/text_secondary"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/btnSaveMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/white"
                android:backgroundTint="@color/secondary_green"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>