<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Mood Emoji -->
        <TextView
            android:id="@+id/tvMoodEmoji"
            android:layout_width="@dimen/mood_emoji_size"
            android:layout_height="@dimen/mood_emoji_size"
            android:text="ðŸ˜Š"
            android:textSize="@dimen/mood_emoji_text_size"
            android:gravity="center"
            android:background="@drawable/mood_emoji_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Mood Note/Description -->
        <TextView
            android:id="@+id/tvMoodNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Feeling great today!"
            android:textSize="@dimen/mood_note_text_size"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvMoodEmoji"
            app:layout_constraintEnd_toStartOf="@id/ivMoreMood"
            app:layout_constraintBottom_toTopOf="@id/tvMoodDateTime" />

        <!-- Date and Time -->
        <TextView
            android:id="@+id/tvMoodDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Today, 10:30 AM"
            android:textSize="@dimen/mood_datetime_text_size"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvMoodNote"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvMoodEmoji"
            app:layout_constraintEnd_toStartOf="@id/ivMoreMood" />

        <!-- More Options Icon -->
        <ImageView
            android:id="@+id/ivMoreMood"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_more"
            android:contentDescription="More options"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>