<?xml version="1.0" encoding="utf-8"?>
<!-- sw600dp landscape version - horizontal layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_vertical">

        <!-- Left Column: Emoji Grid + Selected Mood -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_feeling"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Mood Emoji Grid -->
            <GridLayout
                android:id="@+id/gridMoodEmojis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:rowCount="2"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true"
                android:layout_marginBottom="16dp" />

            <!-- Selected Mood Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/selected_mood_display_bg">

                <TextView
                    android:id="@+id/tvSelectedMoodEmoji"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="ðŸ˜Š"
                    android:textSize="44sp"
                    android:gravity="center"
                    android:background="@drawable/selected_emoji_bg" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvMoodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/happy"
                        android:textSize="18sp"
                        android:textColor="@color/accent_green"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMoodDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/happy_desc"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Right Column: Note Input -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_note_optional"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/whats_on_mind"
                app:boxBackgroundColor="@color/surface_dark"
                app:boxStrokeColor="@color/accent_green"
                app:hintTextColor="@color/accent_green"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMoodNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="5"
                    android:maxLines="8"
                    android:gravity="top|start" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnCancelMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/text_secondary"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <Button
                    android:id="@+id/btnSaveMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/secondary_green"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
