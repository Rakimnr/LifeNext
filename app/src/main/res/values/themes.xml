<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- App Theme - Day -->
    <style name="Theme.LifeNext" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar & background -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Popup menu -->
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <!-- Optional: NoActionBar variant -->
    <style name="Theme.LifeNext.NoActionBar" parent="Theme.LifeNext" />
</resources>
