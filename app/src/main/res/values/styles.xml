<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Popup Menu Style with Dark Green Background -->
    <style name="CustomPopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <!-- Launch Screen / Splash Theme with Dark Background -->
    <style name="Theme.LifeNext.Launch" parent="Theme.LifeNext.NoActionBar">
        <item name="android:windowBackground">@color/primary_green</item>
    </style>

</resources>
